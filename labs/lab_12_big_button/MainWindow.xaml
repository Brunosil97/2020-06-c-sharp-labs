<Window x:Class="lab_12_big_button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_12_big_button"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="GoButton" Grid.Column="0" Grid.Row="0" FontSize="50" Click="GoButton_Click">G0</Button>
        <TextBlock x:Name="displayText" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="55"></TextBlock>
    </Grid>
</Window>
